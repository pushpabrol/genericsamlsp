<!DOCTYPE html>
<html lang="en">

<% include header %>

<body>
    <div id="wrapper" class="toggled">
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1><span class="fa fa-plus"></span> Set IDP</h1>
                        <!-- CREATE FORM -->
                        <form action="/idp/setup" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Login Endpoint:</label>
                                <input type="text" class="form-control" name="sso_login_url">
                            </div>
                            <div class="form-group">
                                <label>Logout Endpoint:</label>
                                <input type="text" class="form-control" name="sso_logout_url">
                            </div>
                            <div class="form-group">
                                <label>Public Key:</label>
                                <input type="file" class="form-control" name="idp_public_key">
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

   <% include scripts %>

</body>

</html>
